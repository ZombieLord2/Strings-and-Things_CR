        <Button x:Name="buttonClearMe" Content="Clear Me" HorizontalAlignment="Left" Margin="159,361,0,0" VerticalAlignment="Top" Width="521" FontSize="22" FontWeight="Bold" Height="43" Click="buttonClearMe_Click"/>

    </Grid>
</Window>
